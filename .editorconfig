root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.astro]
indent_size = 4

[*.{js,jsx,ts,tsx}]
indent_size = 4

[*.{json,yml,yaml}]
indent_size = 4

[*.{css,scss}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_size = 4
