---
import Layout from "@/layouts/Layout.astro";
// import { Mail, Download, Terminal, Layers, Database, Cpu, Phone } from "@lucide/astro";

interface Props {
    seo: {
        title: string;
        description: string;
    };

    title: string;
    bio: string[];
    stack: {
        title: string;
        items: Array<{
            category: string;
            items: string[];
        }>;
    };
    experience: {
        title: string;
        items: {
            company: string;
            location: string;
            period: string;
            role: string;
            achievements: string[];
        }[];
    };
}

const { stack, experience, seo, title, bio } = Astro.props;

const [firstPart, secondPart] = title.split("|");
---

<Layout galaxy="zoomReset" title={seo.title} description={seo.description}>
    <section class="pg-about w-full min-h-screen pt-32 px-6 md:px-24 pb-24 pointer-events-none">
        <div class="pointer-events-auto max-w-7xl mx-auto">
            <header class="mb-20 hidden">
                <div class="flex flex-col md:flex-row md:items-end justify-between gap-8">
                    <div>
                        <div class="flex flex-wrap gap-4 mt-6">
                            <a
                                href="#"
                                class="flex items-center gap-2 px-6 py-3 bg-cyan-600 hover:bg-cyan-500 text-white font-bold rounded-full transition-all transform hover:scale-105 shadow-[0_0_20px_rgba(8,145,178,0.3)]"
                            >
                                <!-- <Download class="size-4" /> DOWNLOAD CV -->
                            </a>
                            <div
                                class="flex items-center gap-4 px-4 py-3 border border-slate-800 rounded-full bg-slate-900/50 backdrop-blur-sm"
                            >
                                <a
                                    href="mailto:asegundo442@gmail.com"
                                    class="text-slate-400 hover:text-white transition-colors"
                                >
                                    <!-- <Mail class="size-5" /> -->
                                </a>
                                <a
                                    href="https://linkedin.com"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-slate-400 hover:text-cyan-400 transition-colors"
                                >
                                    <!-- <Linkedin class="size-5" /> -->
                                </a>
                                <a
                                    href="https://github.com"
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="text-slate-400 hover:text-white transition-colors"
                                >
                                    <!-- <Github class="size-5" /> -->
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <div class="grid grid-cols-1 lg:grid-cols-12 gap-16">
                <div class="lg:col-span-5 space-y-16" data-ws-staggered>
                    <section>
                        <h1
                            class="text-6xl uppercase tracking-[0.2em] text-slate-200/80 font-bold mb-6 flex items-center gap-2"
                        >
                            {firstPart}<span class="text-cyan-500">{secondPart}</span>
                        </h1>
                        <div
                            class="font-mono text-base space-y-6 text-slate-300 leading-relaxed backdrop-blur-sm bg-black/20 p-6 border-l border-cyan-500"
                        >
                            {bio.map((paragraph) => <p>{paragraph}</p>)}
                        </div>
                    </section>

                    <section class="space-y-8">
                        <h3 class="text-sm uppercase tracking-[0.3em] text-cyan-500 font-bold flex items-center gap-2">
                            {stack.title}
                        </h3>
                        <div class="grid grid-cols-2 gap-4">
                            {
                                stack.items.map((stack) => (
                                    <div class="p-4 bg-slate-900/40 border border-slate-800/50 rounded-lg hover:border-cyan-500/50 transition-all duration-500">
                                        <h4 class="text-white font-mono text-sm mb-2 uppercase tracking-tighter flex items-center gap-2 opacity-70">
                                            {/* <stack.icon class="size-3" /> */}
                                            {stack.category}
                                        </h4>
                                        <ul class="text-base text-slate-400 space-y-1">
                                            {stack.items.map((item) => (
                                                <li class="hover:text-cyan-400 transition-colors pointer-events-none">
                                                    — {item}
                                                </li>
                                            ))}
                                        </ul>
                                    </div>
                                ))
                            }
                        </div>
                    </section>
                </div>

                <div class="lg:col-span-7 space-y-12">
                    <h3
                        class="text-sm uppercase tracking-[0.3em] text-cyan-500 font-bold mb-8 flex items-center gap-2"
                        data-ws-fade
                    >
                        {experience.title}
                    </h3>

                    <div class="space-y-12" data-ws-staggered>
                        {
                            experience.items.map((job) => (
                                <div class="relative pl-8 border-l border-slate-800">
                                    <div class="absolute -left-1 top-0 size-2 bg-cyan-500 rounded-full" />

                                    <div class="mb-2">
                                        <span class="text-red-400 font-mono text-sm uppercase tracking-widest">
                                            {job.period}
                                        </span>
                                        <h4 class="text-2xl font-medium tracking-wider text-white">{job.role}</h4>
                                        <p class="text-slate-400 text-base font-medium italic">
                                            {job.company} — {job.location}
                                        </p>
                                    </div>

                                    <ul class="mt-4 space-y-3">
                                        {job.achievements.map((achievement) => (
                                            <li class="text-slate-300 leading-relaxed flex gap-3">
                                                {/* <span class="text-red-500/50 mt-1.5 h-1.5 w-1.5 rounded-full shrink-0" /> */}
                                                {achievement}
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
